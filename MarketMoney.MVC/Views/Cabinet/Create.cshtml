@model MarketMoney.MVC.Models.Cabinet.CreateCabinetDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Создать кабинет</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr/>
        <div class="form-group">
            @Html.LabelFor(x=>x.Title, "Название", htmlAttributes: new {@class= "control-label col-md-2"})
            <div class="col-md-10" style="margin-top: 5px;">
                @Html.EditorFor(x=>x.Title, new { htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        
        <p style="margin-top: 10px;"><i>Не даём выбрать маркетплейс: пока допускаем только <b>Wildberries</b> </i></p>
        
        <div class="form-group">
            @Html.LabelFor(x=>x.ApiKey, "Api-ключ или access-токен", htmlAttributes: new {@class= "control-label col-md-2"})
            <div class="col-md-10" style="margin-top: 5px;">
                @Html.EditorFor(x=>x.ApiKey, new { htmlAttributes = new {@class = "form-control"}})
            </div>
            <p><i>Ключ задаётся при создании. Изменять его нельзя, только установить новый.</i></p>
        </div>
        
        
        <div class="form-group" style="margin-top: 20px;">
            <div>
                <input type="submit" value="Создать" class="btn btn-success"/>
            </div>
        </div>
    </div>
}
