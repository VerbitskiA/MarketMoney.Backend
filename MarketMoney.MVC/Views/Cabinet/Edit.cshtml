@model MarketMoney.Domain.Cabinets.Queries.EditCabinetDto
@{
    ViewBag.Title = "Редактирование";
    Layout = "_Layout";
}

<h2>Редактировать кабинет</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr/>
        <div class="form-group">
            @Html.LabelFor(x=>x.Title, "Название", htmlAttributes: new {@class= "control-label col-md-2"})
            <div class="col-md-10" style="margin-top: 5px;">
                @Html.EditorFor(x=>x.Title, new { htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        
        <p style="margin-top: 10px;"><i>Не даём изменять маркетплейс: пока допускаем только <b>Wildberries</b> </i></p>
        
        <div class="form-group">
            @Html.LabelFor(x=>x.ApiKey, "Api-ключ или access-токен", htmlAttributes: new {@class= "control-label col-md-2"})
            <div class="col-md-10" style="margin-top: 5px;">
                @Html.EditorFor(x=>x.ApiKey, new { htmlAttributes = new {@class = "form-control"}})
            </div>
            <p><i>Не показываем ключ. Можно задать новый.</i></p>
        </div>
        
        <div class="form-group">
            <div class="col"  style="margin-top: 15px;">
                <input type="submit" value="Сохранить" class="btn btn-success"/>
            </div>
        </div>
    </div>
}